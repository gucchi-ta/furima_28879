<% items.each do |item| %>
  <li class='list'>
    <div class='item-img-content'>
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.image, class: "item-img" %>
        <%# 商品が売れていればsold outの表示 %>
        <% if @orders.where(item_id: item.id).present? %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
        <% end %>
        <%# //商品が売れていればsold outの表示 %>
      <% end %>
    </div>
    <div class='item-info'>
      <h3 class='item-name'>
        <%= item.item_name %>
      </h3>
      <div class='item-price'>
        <span><%= item.price %>円<br>(税込み)</span>
        <div class='star-btn' >
          <% if favorites.where(item_id: item.id).present? %>
            <%= image_tag "light_star.png", class:"star-icon" %>
            <span class='star-count'><%= favorites.where(item_id: item.id).count %></span>
          <% else %>
            <%= image_tag "dark_star.png", class:"star-icon" %>
            <span class='star-count'>0</span>
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>